<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="mainFont" format="string" />

    <style name="Theme.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/TextViewFont</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="textAppearanceLabelLarge">@style/StyleLabel</item>
        <item name="textAppearanceSubtitle1">@style/StyleText</item>
        <item name="shapeAppearanceSmallComponent">@style/StyleShapeSmallComponent</item>
        <item name="mainFont">@font/montserrat_extra_bold</item>
    </style>

    <style name="StyleLabel" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">?attr/mainFont</item>
        <item name="android:fontFamily">?attr/mainFont</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="StyleText" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">?attr/mainFont</item>
        <item name="android:fontFamily">?attr/mainFont</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="StyleShapeSmallComponent">
        <item name="chipCornerRadius">3dp</item>
    </style>

    <style name="TextViewFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">?attr/mainFont</item>
    </style>

    <style name="ChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Steel" parent="Theme.Base">
        <item name="colorOnSurface">@color/steelPrimaryColor</item>

        <item name="colorPrimary">@color/steelPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/steelPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/steelPrimaryTextColor</item>

        <item name="colorSecondary">@color/steelSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/steelSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/steelSecondaryTextColor</item>

    </style>

    <style name="Theme.Copper" parent="Theme.Base">
        <item name="colorOnSurface">@color/copperPrimaryColor</item>

        <item name="colorPrimary">@color/copperPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/copperPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/copperPrimaryTextColor</item>

        <item name="colorSecondary">@color/copperSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/copperSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/copperSecondaryTextColor</item>

        <item name="chipStyle">@style/ChipStyle</item>
    </style>

    <style name="Theme.Default" parent="Theme.Steel"/>
</resources>