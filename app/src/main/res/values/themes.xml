<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/TextViewFont</item>
    </style>

    <style name="TextViewFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/chintzy</item>
    </style>

    <style name="ChipBase" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">10dp</item>
    </style>

    <style name="Theme.Steel" parent="Theme.Base">
        <item name="colorPrimary">@color/steelPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/steelPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/steelPrimaryTextColor</item>

        <item name="colorSecondary">@color/steelSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/steelSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/steelSecondaryTextColor</item>

        <item name="chipStyle">@style/SteelChip</item>
    </style>

    <style name="SteelChip" parent="ChipBase">
        <item name="chipBackgroundColor">@color/steelPrimaryDarkColor</item>
    </style>

    <style name="Theme.Copper" parent="Theme.Base">
        <item name="colorPrimary">@color/copperPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/copperPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/copperPrimaryTextColor</item>

        <item name="colorSecondary">@color/copperSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/copperSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/copperSecondaryTextColor</item>

        <item name="chipStyle">@style/CopperChip</item>
    </style>

    <style name="CopperChip" parent="ChipBase">
        <item name="chipBackgroundColor">@color/copperPrimaryColor</item>
    </style>

    <style name="Theme.Default" parent="Theme.Steel"/>
</resources>