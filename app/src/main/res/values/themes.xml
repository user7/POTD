<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="mainFont" format="string" />

    <style name="Theme.Base" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textViewStyle">@style/TextViewFont</item>
        <item name="chipStyle">@style/StyleChipSuggestion</item>
        <item name="textAppearanceLabelLarge">@style/StyleLabel</item>
        <item name="textAppearanceSubtitle1">@style/StyleText</item>
        <item name="shapeAppearanceSmallComponent">@style/StyleShapeSmallComponent</item>
        <item name="mainFont">@font/montserrat_medium</item>
        <item name="collapsingToolbarLayoutStyle">@style/CollapsingToolbarStyle</item>
    </style>

    <style name="CollapsingToolbarStyle" parent="Widget.Material3.CollapsingToolbar">
        <item name="materialThemeOverlay">@style/ToolbarThemeOverlay</item>
    </style>

    <style name="ToolbarThemeOverlay" parent="">
        <item name="colorSurface">?attr/colorTertiary</item>
        <item name="colorOnSurface">?attr/colorOnTertiary</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="StyleLabel" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">?attr/mainFont</item>
    </style>

    <style name="StyleText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">?attr/mainFont</item>
    </style>

    <style name="StyleShapeSmallComponent">
        <item name="chipCornerRadius">3dp</item>
    </style>

    <style name="TextViewFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">?attr/mainFont</item>
    </style>

    <style name="StyleChipSuggestion" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeWidth">2dp</item>
    </style>

    <style name="StyleChipButton" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipIconVisible">true</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="StyleChipFilter" parent="Widget.Material3.Chip.Filter">
        <item name="chipStrokeWidth">2dp</item>
    </style>

    <style name="Theme.Base.BlueGray">
        <item name="colorPrimary">@color/md_bluegray_light_primary</item>
        <item name="colorOnPrimary">@color/md_bluegray_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_bluegray_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_bluegray_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_bluegray_light_secondary</item>
        <item name="colorOnSecondary">@color/md_bluegray_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_bluegray_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_bluegray_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_bluegray_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_bluegray_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_bluegray_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_bluegray_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_bluegray_light_error</item>
        <item name="colorErrorContainer">@color/md_bluegray_light_errorContainer</item>
        <item name="colorOnError">@color/md_bluegray_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_bluegray_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_bluegray_light_background</item>
        <item name="colorOnBackground">@color/md_bluegray_light_onBackground</item>
        <item name="colorSurface">@color/md_bluegray_light_surface</item>
        <item name="colorOnSurface">@color/md_bluegray_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_bluegray_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_bluegray_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_bluegray_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_bluegray_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_bluegray_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_bluegray_light_primaryInverse</item>
    </style>

    <style name="Theme.Base.OrangeGreen">
        <item name="colorPrimary">@color/md_orangegreen_light_primary</item>
        <item name="colorOnPrimary">@color/md_orangegreen_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_orangegreen_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_orangegreen_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_orangegreen_light_secondary</item>
        <item name="colorOnSecondary">@color/md_orangegreen_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_orangegreen_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_orangegreen_light_onSecondaryContainer
        </item>
        <item name="colorTertiary">@color/md_orangegreen_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_orangegreen_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_orangegreen_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_orangegreen_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_orangegreen_light_error</item>
        <item name="colorErrorContainer">@color/md_orangegreen_light_errorContainer</item>
        <item name="colorOnError">@color/md_orangegreen_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_orangegreen_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_orangegreen_light_background</item>
        <item name="colorOnBackground">@color/md_orangegreen_light_onBackground</item>
        <item name="colorSurface">@color/md_orangegreen_light_surface</item>
        <item name="colorOnSurface">@color/md_orangegreen_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_orangegreen_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_orangegreen_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_orangegreen_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_orangegreen_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_orangegreen_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_orangegreen_light_primaryInverse</item>
    </style>

    <style name="Theme.Default" parent="Theme.Base.BlueGray" />

    <style name="Theme.Default.Splash">
        <item name="android:windowBackground">@drawable/splash_bg_layer</item>
    </style>

    <style name="ColoredButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ColoredButton.Red">
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="ColoredButton.Orange">
        <item name="backgroundTint">#FFB300</item>
    </style>

    <style name="ColoredButton.Green">
        <item name="backgroundTint">#006C00</item>
    </style>
</resources>